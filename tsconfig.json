{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ],
    "sourceMap": false
  },
  "compileOnSave": true,
  "files": [
    "index.ts",
  ],
  "include": [
    "src/**/*",
    "*.test.ts"
  ]
}